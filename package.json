{
  "name": "blueprint-fx",
  "version": "2.1.0",
  "description": "Blueprint FX Trading Terminal",
  "main": "main.js",
  "scripts": {
    "build-mac": "electron-builder --mac"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.blueprintfx.terminal",
    "productName": "Blueprint FX",
    "mac": {
      "category": "public.app-category.finance",
      "identity": null,
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "target": {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    }
  }
}
